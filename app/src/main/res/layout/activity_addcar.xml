<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#89CFF0">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="assessment_s4669021-s4669024"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <TextView
        android:id="@+id/addcarTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:text="@string/addcartext"
        android:textAlignment="center"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/bgCar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:contentDescription="@string/car"
        app:srcCompat="@drawable/car" />

    <LinearLayout
        android:id="@+id/brandLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bgCar"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/addBrandTxt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/brandtxt"
        android:textSize="15sp"
        android:padding="10dp"/>

        <EditText
            android:id="@+id/addBrandSpace"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:inputType="text"
            android:background="@color/white"
            android:autofillHints=""
            tools:ignore="LabelFor"
            android:padding="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modelLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/brandLayout"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/addModelTxt"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/modeltxt"
            android:textSize="15sp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/addModelSpace"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:inputType="text"
            android:background="@color/white"
            android:autofillHints=""
            tools:ignore="LabelFor"
            android:padding="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/priceLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/modelLayout"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/addPriceTxt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/pricetxt"
        android:textSize="15sp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/addPriceSpace"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:inputType="text"
        android:background="@color/white"
        android:autofillHints=""
        tools:ignore="LabelFor"
        android:padding="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addCarLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceLayout"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp">
    <Button
        android:id="@+id/addcar2btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>