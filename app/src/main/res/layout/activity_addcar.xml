<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89CFF0">


    <TextView
        android:id="@+id/addCarTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addCarText"
        android:textAlignment="center"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/bgCar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/car"
        app:srcCompat="@drawable/car" />

    <LinearLayout
        android:id="@+id/brandLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bgCar"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/addBrandTxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/brandTxt"
            android:textSize="15sp"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/addBrandSpace"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@color/white"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="15sp"
            tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modelLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/brandLayout"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/addModelTxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/modelTxt"
            android:textSize="15sp"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/addModelSpace"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@color/white"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="15sp"
            tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/priceLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/modelLayout"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/addPriceTxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/priceTxt"
            android:textSize="15sp"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/addPriceSpace"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@color/white"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="15sp"
            tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addCarLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceLayout"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <Button
            android:id="@+id/addcar2btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#46b4e7"
            android:text="@string/addCarText"
            android:textColor="@color/black"
            tools:ignore="DuplicateSpeakableTextCheck" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/backbtnLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addCarLayout"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backBtn"
            android:textColor="@color/black"
            android:backgroundTint="#46b4e7"/>
    </LinearLayout>
</RelativeLayout>