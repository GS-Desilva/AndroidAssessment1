<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#89CFF0">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="assessment_s4669021-s4669024"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <TextView
        android:id="@+id/checkcarTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:text="@string/checkcartitle"
        android:textAlignment="center"
        android:textColor="#1B5E20"
        android:textSize="25sp" />


    <ImageView
        android:id="@+id/bgCar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/car"
        app:srcCompat="@drawable/car" />

    <TextView
        android:id="@+id/checkBrandTxt"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="371dp"
        android:text="@string/brandtxt"
        android:textColor="#1B5E20"
        android:textSize="15sp"
        tools:ignore="VisualLintOverlap" />

    <EditText
        android:id="@+id/checkBrandEx"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="360dp"
        android:background="@color/white"
        android:inputType="text"
        android:minHeight="48dp"
        android:textSize="15sp"
        tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/carModelTxt"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="301dp"
        android:text="@string/modeltxt"
        android:textColor="#1B5E20"
        android:textSize="15sp"
        tools:ignore="TextSizeCheck,VisualLintOverlap" />

    <EditText
        android:id="@+id/checkModelEx"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="288dp"
        android:background="@color/white"
        android:inputType="text"
        android:minHeight="48dp"
        android:textSize="15sp"
        tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/checkPriceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="213dp"
        android:background="#0E88BF"
        android:backgroundTint="#0E88BF"
        android:text="@string/checkpricebtn"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/carpricetext"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="141dp"
        android:text="@string/pricetxt"
        android:textColor="#1B5E20"
        android:textSize="15sp"
        tools:ignore="TextSizeCheck,VisualLintOverlap" />

    <EditText
        android:id="@+id/checkPriceEx"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="129dp"
        android:background="@color/white"
        android:inputType="text"
        android:minHeight="48dp"
        android:textSize="15sp"
        tools:ignore="Autofill,LabelFor,SpeakableTextPresentCheck" />


</RelativeLayout>