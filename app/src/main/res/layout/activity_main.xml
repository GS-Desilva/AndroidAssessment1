<?xml version="1.0" encoding="utf-8"?>

<!--Homepage Interface-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.assesment1.s4669024_s4669021.MainActivity"
    android:background="#89CFF0">

    <ImageView
        android:id="@+id/bgCar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/car"
        app:srcCompat="@drawable/car" />

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="wrap_content"
        android:layout_height="276dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/bgCar"
        android:layout_marginStart="130dp"
        >

        <Button
            android:id="@+id/addCarBtn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:backgroundTint="#46b4e7"
            android:text="@string/addCarBtn"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/checkCarBtn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#46b4e7"
            android:text="@string/checkCarBtn"
            android:textColor="@color/black"
            tools:ignore="RelativeOverlap,TextSizeCheck" />
    </LinearLayout>

</RelativeLayout>